<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".SignActivity">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#6200EE"
        android:textColorHint="#b39afd"
        android:hint="Student Email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/std_email"
            android:maxLines="1"
            android:textColor="#4a26fd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#6200EE"
        android:textColorHint="#b39afd"
        android:hint="Password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/std_pwd"
            android:maxLines="1"
            android:textColor="#4a26fd"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="#80deea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Sign In"
        android:textSize="18sp" />

</com.google.android.material.circularreveal.CircularRevealLinearLayout>